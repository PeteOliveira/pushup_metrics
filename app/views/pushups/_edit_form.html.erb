<%= simple_form_for(@pushup) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount, label: false, required: true, placeholder: "amount", input_html: {type: "tel", autocomplete: "off"} %>
  </div>

  <div class="form-actions">
		<input type="submit" value="Update" class='btn btn-primary' %>
    <%= link_to "Back to History", history_path, class: 'btn btn-default' %>
  </div>
<% end %>